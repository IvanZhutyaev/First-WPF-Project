<Window x:Class="FirstWPFProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FirstWPFProject"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="300">
    
      <Grid>
          <Grid.ColumnDefinitions>
              <ColumnDefinition Width="*"/>
              <ColumnDefinition  Width="Auto"/>
              <ColumnDefinition Width="*"/>

          </Grid.ColumnDefinitions>
          <Grid.RowDefinitions>
              <RowDefinition Height="*"></RowDefinition>
              <RowDefinition Height="Auto"></RowDefinition>
              <RowDefinition Height="*"></RowDefinition>
              <RowDefinition Height="Auto"></RowDefinition>
              <RowDefinition Height="*"></RowDefinition>
              <RowDefinition Height="Auto"></RowDefinition>
              <RowDefinition Height="*"></RowDefinition>
              <RowDefinition Height="Auto"></RowDefinition>
              <RowDefinition Height="*"></RowDefinition>
          </Grid.RowDefinitions>
          
         
          <Button Grid.Column="0" Grid.Row="0" Background="Red" Click="Red" Content="Red"/>
          <Button Grid.Column="0" Grid.Row="2" Background="Green" Click="Green" Content="Blue"/>
          <Button Grid.Column="0" Grid.Row="4" Background="Blue" Click="Blue" Content="Green"/>
          <Button Grid.Column="0" Grid.Row="6" Background="Yellow" Click="Yellow" Content="Yellow"/>
          <Button Grid.Column="0" Grid.Row="8" Background="Purple" Click="Purple" Content="Purple"/>
          
          <GridSplitter Grid.Row="0" Grid.RowSpan="10" Grid.Column="1" ShowsPreview = "False" Width="3"
                        HorizontalAlignment="Center" VerticalAlignment="Stretch"/>
          <GridSplitter Grid.Row="1" Grid.Column="0" ShowsPreview = "False" Height="3" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
          <GridSplitter Grid.Row="3" Grid.Column="0" ShowsPreview = "False" Height="3" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
          <GridSplitter Grid.Row="5" Grid.Column="0" ShowsPreview = "False" Height="3" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
          <GridSplitter Grid.Row="7" Grid.Column="0" ShowsPreview = "False" Height="3" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
          
          <Button  x:Name = "ColorfullBtn" Background="White" Grid.Column="2" Grid.Row="0" Grid.RowSpan = "10" Content="BTN"/>
          
          
      </Grid>
</Window>